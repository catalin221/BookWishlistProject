@page
@model PaulBejinariu_Project.Pages.BookWishlists.IndexModel

@{
    ViewData["Title"] = "Wishlist";
}

<h1>Wishlist</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BookWishlist[0].BookGenre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookWishlist[0].Book)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.BookWishlist)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BookGenre.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Book.Name)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
